{
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint", "^@typescript-eslint"],
      "groupName": "eslint related"
    },
    {
      "matchPackagePatterns": ["*"],
      "rangeStrategy": "bump"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "extends": ["config:base"]
}
